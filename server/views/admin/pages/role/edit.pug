extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    if (role.permissions.includes("roles_edit"))
        +alert-error("5000")
        h1(class="mb-4") Sửa phân quyền

        form(
            action= `${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
            method="POST"
        )
            div(class="form-group mb-3")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value=data.title
                    required
                )
            div(class="form-group mb-3")
                lable(for="desc") Mô tả
                textarea(
                    class="form-control"
                    id="desc"
                    name="description"
                    rows="5"
                    class="tinymce-textarea"
                ) !{data.description}
            div(class="form-group mb-3")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Sửa